@namespace RxStoreC

@using Microsoft.FSharp.Core


@typeparam T


@if (OptionModule.IsSome(Of))
{
    if (WhenSome != null)
    {
        @WhenSome(Of.Value)
    }
}
else
{
    if (WhenNone != null)
    {
        @WhenNone
    }
}


@code
{
    [Parameter]
    public FSharpOption<T> Of { get; set; }

    [Parameter]
    public RenderFragment<T> WhenSome { get; set; }

    [Parameter]
    public RenderFragment WhenNone { get; set; }
}
