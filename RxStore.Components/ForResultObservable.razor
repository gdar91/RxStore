@namespace RxStoreC

@using Microsoft.FSharp.Core


@typeparam TOk
@typeparam TError


<RxStore.Subscribe To="Of" Context="result">
    <ForResult Of="result">
        <WhenOk Context="value">
            @if (WhenOk != null)
            {
                @WhenOk(value)
            }
        </WhenOk>
        <WhenError Context="value">
            @if (WhenError != null)
            {
                @WhenError(value)
            }
        </WhenError>
    </ForResult>
</RxStore.Subscribe>


@code
{
    [Parameter]
    public IObservable<FSharpResult<TOk, TError>> Of { get; set; }

    [Parameter]
    public RenderFragment<TOk> WhenOk { get; set; }

    [Parameter]
    public RenderFragment<TError> WhenError { get; set; }
}
